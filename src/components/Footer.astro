---
import Logo from '../assets/images/logo.svg';
import { COPY_TR } from '../config/copy.tr';
import { SITE, getTelLink, getWhatsAppLink } from '../config/site';

const telLink = getTelLink(SITE.phoneNumber);
const whatsappLink = getWhatsAppLink(SITE.whatsappNumber);
---

<footer id="site-footer" class="border-t border-slate-200 bg-white">
  <div class="mx-auto max-w-screen-md px-4 py-8">
    <div class="grid gap-8 md:grid-cols-[1.2fr_1fr_1fr_1fr]">
      <div>
        <a href="/" class="inline-flex items-center gap-2" aria-label="Ana Sayfa">
          <Logo class="h-9 w-9" />
          <span class="text-sm font-semibold tracking-tight text-slate-900">AH Matematik</span>
        </a>
        <p class="mt-3 text-xs text-slate-600">Ankara ve online matematik özel ders için hızlı iletişim.</p>
        <div class="mt-3 space-y-1 text-xs text-slate-600">
          <a href={telLink} class="inline-block transition hover:text-slate-900 hover:underline">Telefon: {SITE.phoneDisplay}</a>
          <br />
          <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="inline-block transition hover:text-slate-900 hover:underline">
            WhatsApp ile Yaz
          </a>
        </div>
      </div>

      <nav aria-label="Programlar">
        <h3 class="text-xs font-semibold uppercase tracking-wide text-slate-700">Programlar</h3>
        <ul class="mt-3 space-y-2 text-sm text-slate-600">
          {SITE.footerNav.programs.map((item) => (
            <li><a href={item.href} class="transition hover:text-slate-900 hover:underline">{item.label}</a></li>
          ))}
        </ul>
      </nav>

      <nav aria-label="Öğrenci Kaynakları">
        <h3 class="text-xs font-semibold uppercase tracking-wide text-slate-700">Öğrenci Kaynakları</h3>
        <ul class="mt-3 space-y-2 text-sm text-slate-600">
          {SITE.footerNav.content.map((item) => (
            <li><a href={item.href} class="transition hover:text-slate-900 hover:underline">{item.label}</a></li>
          ))}
        </ul>
      </nav>

      <nav aria-label="Kurumsal">
        <h3 class="text-xs font-semibold uppercase tracking-wide text-slate-700">Kurumsal</h3>
        <ul class="mt-3 space-y-2 text-sm text-slate-600">
          {SITE.footerNav.corporate.map((item) => (
            <li><a href={item.href} class="transition hover:text-slate-900 hover:underline">{item.label}</a></li>
          ))}
        </ul>
      </nav>
    </div>

    <div class="mt-8 border-t border-slate-100 pt-4">
      <p class="text-xs text-slate-500">{COPY_TR.footer.line1} • {COPY_TR.footer.line2}</p>
    </div>
  </div>
</footer>
