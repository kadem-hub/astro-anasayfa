import { COPY_TR } from '../config/copy.tr';
const s = COPY_TR.steps;
---
<section class="bg-white">
  <div class="mx-auto max-w-screen-md px-4 pb-8">
    <h2 class="text-xl font-extrabold tracking-tight text-slate-900">{s.title}</h2>

    <div class="mt-4 grid gap-3 sm:grid-cols-3">
      {s.items.map((it) => (
        <article class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
          <p class="text-xs font-semibold text-slate-500">AdÄ±m</p>
          <h3 class="mt-1 text-sm font-bold text-slate-900">{it.title}</h3>
          <p class="mt-2 text-sm leading-relaxed text-slate-700">{it.desc}</p>
        </article>
      ))}
    </div>
  </div>
</section>
