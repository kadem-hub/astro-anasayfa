---
import { SITE, getWhatsAppLink, getTelLink } from '../config/site';
const whatsappLink = getWhatsAppLink(SITE.whatsappNumber);
const telLink = getTelLink(SITE.whatsappNumber);
---
<!-- Mobil sticky CTA (sadece small ekran) -->
<div class="fixed inset-x-0 bottom-0 z-50 sm:hidden">
  <div class="mx-auto max-w-screen-md px-4 pb-[max(env(safe-area-inset-bottom),12px)] pt-3">
    <div class="rounded-2xl border border-slate-200 bg-white/85 backdrop-blur shadow-lg p-2 grid grid-cols-2 gap-2">
      <a
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        data-event="conversion"
        data-category="whatsapp"
        data-action="click"
        data-label="sticky_whatsapp_primary"
        class="inline-flex items-center justify-center gap-2 rounded-xl bg-emerald-600 px-4 py-3.5 text-sm font-extrabold text-white shadow-sm transition hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
        aria-label="WhatsApp ile yaz"
      >
        WhatsApp
      </a>

      <a
        href={telLink}
        data-event="conversion"
        data-category="phone"
        data-action="click"
        data-label="sticky_phone_secondary"
        class="inline-flex items-center justify-center gap-2 rounded-xl border border-slate-300 bg-white px-4 py-3.5 text-sm font-extrabold text-slate-900 shadow-sm transition hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-300 focus:ring-offset-2"
        aria-label="Telefonla ara"
      >
        Ara
      </a>
    </div>
  </div>
</div>
