---
import { COPY_TR } from '../config/copy.tr';
const faq = COPY_TR.faq;
---
<section class="bg-white">
  <div class="mx-auto max-w-screen-md px-4 pb-24">
    <h2 class="text-xl font-extrabold tracking-tight text-slate-900">{faq.title}</h2>

    <div class="mt-4 space-y-2">
      {faq.items.map((item) => (
        <details class="group rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
          <summary class="cursor-pointer list-none text-sm font-semibold text-slate-900">
            <span class="inline-flex items-center justify-between w-full">
              <span>{item.q}</span>
              <span class="ml-3 text-slate-500 group-open:rotate-45 transition">+</span>
            </span>
          </summary>
          <p class="mt-3 text-sm leading-relaxed text-slate-700">{item.a}</p>
        </details>
      ))}
    </div>
  </div>
</section>
