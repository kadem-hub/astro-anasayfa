---
import { COPY_TR } from '../config/copy.tr';
const sp = COPY_TR.socialProof;
---
<section class="bg-white">
  <div class="mx-auto max-w-screen-md px-4 pb-2">
    <h2 class="text-lg font-bold tracking-tight text-slate-900">{sp.title}</h2>
    <p class="mt-1 text-sm text-slate-600">{sp.lead}</p>

    <div class="mt-3 flex flex-wrap gap-2">
      {sp.stats.map((s) => (
        <div class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1">
          <span class="text-sm font-semibold text-slate-900">{s.k}</span>
          <span class="text-xs text-slate-600">{s.v}</span>
        </div>
      ))}
    </div>
  </div>
</section>
