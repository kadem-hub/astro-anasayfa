---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import SocialProof from '../components/SocialProof.astro';
import Testimonials from '../components/Testimonials.astro';
import ProblemSolution from '../components/ProblemSolution.astro';
import Steps from '../components/Steps.astro';
import FAQ from '../components/FAQ.astro';
import Footer from '../components/Footer.astro';
import StickyCTA from '../components/StickyCTA.astro';
import { COPY_TR } from '../config/copy.tr';
---
<BaseLayout
  title={COPY_TR.meta.title}
  description={COPY_TR.meta.description}
  canonical="https://ahmatematik.com"
  ogImage="/og.webp"
>
  <Header />
  <main>
    <Hero />
    <SocialProof />
    <Testimonials />
    <ProblemSolution />
    <Steps />
    <FAQ />
  </main>
  <Footer />
  <StickyCTA />
</BaseLayout>
